<div class="bg-primary uk-light">
    <nav class="uk-navbar-container uk-navbar-transparent uk-margin" uk-navbar>
        <div class="uk-navbar-left">
            <%= link_to data.config.site_name, '/index.html', class: 'uk-navbar-item uk-logo' %>
        </div>

        <div class="uk-navbar-right">

            <ul class="uk-navbar-nav">
                <% data.navigation_links.each do |link| %>
                    <li>
                        <%= link_to link.label, link.url %>
                        <% if link.sub %>
                            <div class="uk-navbar-dropdown">
                                <ul class="uk-nav uk-navbar-dropdown-nav">
                                    <% link.sub.each do |sub_link| %>
                                        <li>
                                            <%= link_to sub_link.label, sub_link.url %>
                                        </li>
                                    <% end %>
                                </ul>
                            </div>
                        <% end %>
                    </li>
                <% end %>
            </ul>

        </div>
    </nav>
</div>